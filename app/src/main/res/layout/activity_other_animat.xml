<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/pendulum_relay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/clock_bg">

                <ImageView
                    android:id="@+id/pendulum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/clock_arro" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pendulum_relay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/clock_bg">

                <ImageView
                    android:id="@+id/pendulum2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/clock_arro" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/pendulum_relay3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#00ff00"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/clock_bg" />

                <ImageView
                    android:id="@+id/pendulum3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/clock_arro2" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/pendulum_relay4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#00ff00"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/clock_bg" />

                <ImageView
                    android:id="@+id/pendulum4"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/clock_arro2" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/tu_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/icon_reward" />
                <ImageView
                    android:id="@+id/like_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/comm_like_pressed" />
                <ImageView
                    android:id="@+id/likepost_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/comm_like_pressed" />
                <ImageView
                    android:id="@+id/hard_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/comm_like_pressed" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/reward_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_reward" />
                <ImageView
                    android:id="@+id/like_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_private_message_like_video" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
