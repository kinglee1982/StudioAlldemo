<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>
    <!-- 上下有黑边：android:fadingEdge="none"； -->
    <!-- listview在拖动的时候背景图片消失变成黑色背景，等到拖动完毕我们自己的背景图片才显示出来；android:scrollingCache=”false” 或 android:cacheColorHint=”#00000000″ -->
    <!-- lsitview的每一项之间需要设置一个图片做为间隔； android:divider=”@drawable/list_driver” -->
    <!-- 修改listview的Item默认选择时的黄色背景 android:listSelector="#00000000"透明-->
    <!-- android:stackFromBottom="true"将从底部开始展示 -->
    <!-- android:scrollBarFadeDuration="500" 500毫秒自动消失 -->
    <!-- android:scrollbarThumbVertical="@drawable/ic_launcher" 滚动条的图片 -->
	<!--android:scrollbars="none"去掉系统的滚动条  -->
	<ListView
	    android:id="@+id/choose_videos"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:listSelector="#00000000"
	    android:cacheColorHint="#00000000"
	    android:dividerHeight="1dp"
	    android:divider="@android:color/darker_gray"
	    android:fadingEdge="none"
	    android:scrollbarThumbVertical="@drawable/ic_launcher"
	    />
</LinearLayout>