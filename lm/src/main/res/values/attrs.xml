<?xml version="1.0" encoding="utf-8"?>
<resources>
	<attr name="lm_show_count" format="integer" />
	<attr name="lm_level" format="integer" />
	<attr name="lm_item_height" format="dimension" />
	<attr name="lm_text_size" format="dimension" />
	<attr name="lm_text_color" format="reference|color" />
	<attr name="lm_gravity" format="integer"/>
	<attr name="lm_focus_background" format="reference|color" />
	<attr name="lm_rating_src" format="reference|color" />
	<attr name="lm_rating_max" format="integer" />
	<attr name="lm_proportion_relative" format="enum">
		<enum name="none" value="0" />
		<enum name="width" value="1" />
		<enum name="height" value="2" />
	</attr>
	<attr name="lm_relative" format="enum">
		<enum name="width" value="0" />
		<enum name="height" value="1" />
	</attr>
	<attr name="lm_proportion" format="float" />
	<attr name="lm_max_width" format="dimension" />
	<attr name="lm_max_height" format="dimension" />

	<declare-styleable name="RatingBar">
		<attr name="lm_rating_src" />
		<attr name="lm_rating_max" />
	</declare-styleable>

	<declare-styleable name="PickerTextView">
		<attr name="lm_item_height" />
		<attr name="lm_show_count" />
		<attr name="lm_text_color" />
		<attr name="lm_text_size" />
		<attr name="lm_focus_background" />
	</declare-styleable>

	<declare-styleable name="ProportionLinearLayout" >
		<attr name="lm_proportion_relative" />
		<attr name="lm_proportion" />
		<attr name="lm_max_width" />
		<attr name="lm_max_height" />
	</declare-styleable>

	<declare-styleable name="ProportionImageView" >
		<attr name="lm_proportion_relative" />
		<attr name="lm_proportion" />
	</declare-styleable>

	<declare-styleable name="SquareRelativeLayout">
		<attr name="lm_relative" />
	</declare-styleable>

	<attr name="verticalSpacing" format="dimension" />
	<attr name="horizontalSpacing" format="dimension" />

	<declare-styleable name="HorizontalLayout">
		<attr name="verticalSpacing" />
		<attr name="horizontalSpacing" />
	</declare-styleable>
</resources>